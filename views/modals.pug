//- Tapahtuman yksityiskohdat -modaali
.modal.fade#eventDetailModal(tabindex="-1" role="dialog" aria-labelledby="eventDetailModalLabel" aria-hidden="true")
  .modal-dialog.modal-lg(role="document")
    .modal-content
      .modal-header
        h5.modal-title#eventDetailModalLabel Tapahtuman tiedot
        button.close(type="button" data-dismiss="modal" aria-label="Close")
          span(aria-hidden="true") ×
      .modal-body
        h4#eventTitleModal
        p#eventDescriptionModal
        h5.mt-4 Reagoi tapahtumaan:
        .btn-group#eventReactionsModal
        h5.mt-4 Kommentit:
        ul.list-group#eventCommentsModal
        form.mt-3
          .form-group
            label(for="commentText") Lisää kommentti
            textarea.form-control#commentText(placeholder="Kirjoita kommentti..." rows="2")
          button.btn.btn-primary(type="submit") Lähetä
      .modal-footer
        button.btn.btn-secondary(type="button" data-dismiss="modal") Sulje

//- Luo uusi tapahtuma -modaali
.modal.fade#createEventModal(tabindex="-1" role="dialog" aria-labelledby="createEventModalLabel" aria-hidden="true")
  .modal-dialog(role="document")
    .modal-content
      .modal-header
        h5.modal-title#createEventModalLabel Luo uusi tapahtuma
        button.close(type="button" data-dismiss="modal" aria-label="Close")
          span(aria-hidden="true") ×
      .modal-body
        form#createEventForm
          .form-group
            label(for="eventTitle") Tapahtuman nimi
            input.form-control#eventTitle(type="text" placeholder="Esim. Katujuhlat" required)
          .form-group
            label(for="eventDescription") Kuvaus
            textarea.form-control#eventDescription(placeholder="Lyhyt kuvaus tapahtumasta" rows="3" required)
          .form-group
            label(for="eventLocation") Sijainti
            input.form-control#eventLocation(type="text" placeholder="Esim. Helsingin keskusta" required)
          .form-group
            label(for="eventCoords") Koordinaatit (lat, lon)
            input.form-control#eventCoords(type="text" placeholder="Esim. 60.1699, 24.9384" required)
          .form-group
            label(for="eventDate") Päivämäärä
            input.form-control#eventDate(type="date" required)
          .form-group
            label(for="eventTime") Kellonaika
            input.form-control#eventTime(type="time" required)
          button.btn.btn-primary(type="submit") Lisää tapahtuma

